<div>

    <div>
        <h3>Add New Student</h3>
    </div>

    <div class="row">
        <div class=",col-lg-6">  
            @{
                if (TempData["ErrorTemp"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["ErrorTemp"]
                    </div>
                }
            }
        </di>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <form asp-controller="Student" asp-action="CreateStudentPost">
                <div class="form-group">
                    <label>Student Name</label>
                    <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Enter name" required>
                </div>

                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" id="UserEmail" name="UserEmail" placeholder="Enter email" required>
                </div>

                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" class="form-control" id="UserPhoneNo" name="UserPhoneNo" placeholder="Enter phone number" required>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>


</div>
